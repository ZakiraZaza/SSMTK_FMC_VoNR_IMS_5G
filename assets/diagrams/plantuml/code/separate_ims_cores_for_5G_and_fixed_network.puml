@startuml
top to bottom direction
hide <<hidden>> stereotype
hide <<core>> stereotype

<style>
rectangle {
  HorizontalAlignment center
  BackgroundColor white
  .hidden {
    BackgroundColor transparent
    FontColor transparent
  }
  .core {
    BackgroundColor #EEEEEE
  }
}
</style>

skinparam rectangle {
  BorderColor black
  BorderColor<<hidden>> transparent
}

skinparam linetype ortho

title "Odvojena IMS jezgra za 5G i fiksnu mre탑u"

cloud "5G mobilna mre탑a" as "cloud_1" {
  rectangle "0" <<hidden>>
  rectangle "5G UE (VoNR telefon)" as 1
  rectangle "gNB" as 2
  rectangle "_1"<<hidden>> {
    rectangle "_2"<<hidden>> {
      rectangle "5G core (5GC)\nAMF/SMF/UPF" as 3
    }
    rectangle "Odvojeno jezgro" <<core>> as "sc_1" {
      rectangle "IMS jezgro\nP-CSCF, I-CSCF\nS-CSCF, AS\nHSS/UDM" as 4_1 
    }
  }
}

cloud "Fiksna mre탑a" as "cloud_2" {
  rectangle "_4"<<hidden>> {
    rectangle "Odvojeno jezgro" <<core>> as "sc_2" {
      rectangle "IMS jezgro\nP-CSCF, I-CSCF\nS-CSCF, AS\nHSS/UDM" as 4_2 
    }
    rectangle "_5"<<hidden>> {
      rectangle "AGF/BNG\nfixed access gateway" as 5
    }
  }
  rectangle "Fiksna pristupna ta훾ka\n(xDSL/FTTH)" as 6
  rectangle "CPE/Home router" as 7
  rectangle "SIP telefon/Softphone" as 8
}

rectangle "rectangle_empty"<<hidden>> {

}

cloud_1 -[hidden]right-> rectangle_empty
0 -[hidden]down-> 1
1 -down-> 2
2 -down-> 3
3 -right-> 4_1
4_1 <-right-> 4_2
4_2 -right-> 5
5 <-up- 6
6 <-up- 7
7 <-up- 8
@enduml
